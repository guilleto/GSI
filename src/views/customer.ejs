<%- include('partials/_header'); -%>



<a href="/Orden"class="btn btn-info">Ordenar por Departamento</a>
<a href="/Buscar"class="btn btn-info">Buscar por Departamento</a>

<div class="container">
    <div class="row mt-5">
        <div class="col-md-10">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>numero</th>
                        <th>Problema</th>
                        <th>Departamento</th>
                        <th>Municipio</th>
                        <th>Localidad</th>
                        <th>Fecha</th>
                        <th>Descripcion</th>
                        <th>Escala</th>
                        <th>Acciones</th>

                    </tr>       
                </thead>
                <tbody>

                    <% if(data){%>
                        <%for(var i = 0; i < data.length;i++){%>
                            <tr>
                                <td><%= (i+1)%></td>
                                <td><%= data[i].Problema%></td>
                                <td><%= data[i].Departamento%></td>
                                <td><%= data[i].Municipio%></td>
                                <td><%= data[i].Localidad%></td>
                                <td><%= data[i].Fecha%></td>
                                <td><%= data[i].Descripcion%></td>
                                <td><%= data[i].EscalaPeligro%></td>
                                <td>
                                    <a href="/delete/<%= data[i].problem_id%>" class="btn btn-danger">Delete</a>
                                    <a href="/update/<%= data[i].problem_id%>"class="btn btn-info">Actualizar</a>
                                </td>

                            </tr>
                        <%}%>
                        <% }%>
                </tbody> 
            </table>
        </div>


        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <form action="/add" method="post" >
                        <div class="form-group">
                            <input type="text" name="Problema" placeholder="problema" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="Departamento" placeholder="Departamento" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="Municipio" placeholder="Municipio" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="Localidad" placeholder="Localidad" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="Fecha" placeholder="Fecha" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="Descripcion" placeholder="Descripcion" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="EscalaPeligro" placeholder="EscalaPeligro" class="form-control">
                        </div>
                        <button type="submit" class="btn btn-primary">
                            Ingresar el Dato 
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('partials/_footer'); -%>